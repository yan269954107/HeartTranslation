<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/translation_primary</item>
        <item name="colorPrimaryDark">@color/translation_primary_dark</item>
        <item name="colorAccent">@color/translation_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@color/text_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>
    
    <style name="cardview_explain_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="textview_style.explain_title">
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:textSize">@dimen/size_tips_word</item>
    </style>

    <style name="textview_style.explain_content">
        <item name="android:layout_margin">@dimen/margin_double</item>
        <item name="android:textSize">@dimen/size_tips_explain</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">

    </style>

</resources>
