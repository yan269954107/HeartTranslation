<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.yanxw.hearttranslation.fragment.DictExplainFragment">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_explain"
        style="@style/cardview_explain_style"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="@dimen/radius_default"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDictName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textview_style.explain_title"
                android:text="@string/dict_name_default"/>

            <TextView
                android:id="@+id/txtExplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textview_style.explain_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
